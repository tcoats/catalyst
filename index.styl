@require "./node_modules/normalize.css/normalize.css"
@require "./fonts/SourceSansPro.styl"

$primary = #46413E
$secondary = #AC9E96
$brand-primary = #30C100
$brand-secondary = #D91F37
$subtle-border = #ddd
$selected = #0097D6
$danger = #FF2D2D

html, body
  margin 0
  padding 0
  font-family "Source Sans Pro", Calibri, Candara, Arial, sans-serif

h1, h2, h3, h4, h5, h6
  font-weight lighter

header
  h1
    text-transform uppercase